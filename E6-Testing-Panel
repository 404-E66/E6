local Dropdown = Tab:CreateDropdown({
	Name = "Theme Select",
	Options = {"Default","Amber Glow"},
	CurrentOption = {"Default"},
	MultipleOptions = false,
	Flag = "Dropdown1", -- A flag is the identifier for the configuration file, make sure every element has a different flag if you're using configuration saving to ensure no overlaps
	Callback = function(Options)
		-- The function that takes place when the selected option is changed
		-- The variable (Options) is a table of strings for the current selected options
		if Options == "Default" then
			local Theme = "Default"
		end

		if Options == "Amber Glow" then
			local Theme = "AmberGlow"
		end
	end,
})

local Tab = Window:CreateTab("Fe Scripts", 4483362458)
local Section = Tab:CreateSection("Scripts")

local Tab = Window:CreateTab("Client Scripts", 4483362458)
local Section = Tab:CreateSection("Scripts")

local Toggle = Tab:CreateToggle({
	Name = "Noclip",
	CurrentValue = false,
	Flag = "NoclipToggle",
	Callback = function(Value)
		-- Re-check character in case player respawned
		character = player.Character or player.CharacterAdded:Wait()

		if Value then
			-- Enable noclip
			noclipConnection = RunService.Stepped:Connect(function()
				for _, part in pairs(character:GetDescendants()) do
					if part:IsA("BasePart") and part.CanCollide then
						part.CanCollide = false
					end
				end
			end)
		else
			-- Disable noclip
			if noclipConnection then
				noclipConnection:Disconnect()
				noclipConnection = nil
			end

			-- Restore collisions
			for _, part in pairs(character:GetDescendants()) do
				if part:IsA("BasePart") then
					part.CanCollide = true
				end
			end
		end
	end,
})



local Toggle = Tab:CreateToggle({
	Name = "Sit",
	CurrentValue = false,
	Flag = "SitToggle",
	Callback = function(Value)
		character = player.Character or player.CharacterAdded:Wait()
		humanoid = character:WaitForChild("Humanoid")

		if Value then
			humanoid.Sit = true
		else
			humanoid.Sit = false
		end
	end,
})


local Toggle = Tab:CreateToggle({
	Name = "Fall",
	CurrentValue = false,
	Flag = "FallToggle",
	Callback = function(Value)
		local character = player.Character or player.CharacterAdded:Wait()
		local humanoid = character:WaitForChild("Humanoid")

		if Value then
			-- Lay down like Infinite Yield's ":lay"
			humanoid:ChangeState(Enum.HumanoidStateType.FallingDown)
		else
			-- Stand back up manually
			humanoid:ChangeState(Enum.HumanoidStateType.GettingUp)
		end
	end,
})

local Toggle = Tab:CreateToggle({
	Name = "Teleport Tool",
	CurrentValue = false,
	Flag = "TeleportToolToggle",
	Callback = function(Value)
		teleportToggleOn = Value

		if Value then
			if not backpack:FindFirstChild("Click Teleport") then
				currentTool = createTeleportTool()
				currentTool.Parent = backpack
			end
		else
			local tool = backpack:FindFirstChild("Click Teleport")
			if tool then
				tool:Destroy()
			end
			-- also clean up if holding it
			if player.Character and player.Character:FindFirstChild("Click Teleport") then
				player.Character["Click Teleport"]:Destroy()
			end
			currentTool = nil
		end
	end,
})

local Toggle = Tab:CreateToggle({
	Name = "Spin",
	CurrentValue = false,
	Flag = "SpinToggle", 
	Callback = function(Value)
		spinning = Value

		if spinning then
			startSpin()
		else
			stopSpin()
		end
	end,
})

local Slider = Tab:CreateSlider({
	Name = "Spin Speed",
	Range = {10, 5000},
	Increment = 10,
	Suffix = "SPIN",
	CurrentValue = 25,
	Flag = "SpinSlider",
	Callback = function(Value)
		spinSpeed = Value
	end,
})

local Toggle = Tab:CreateToggle({
	Name = "Speed",
	CurrentValue = false,
	Flag = "SpeedToggle", 
	Callback = function(Value)
		speedEnabled = Value
		applySpeed()
	end,
})

-- Slider
local Slider = Tab:CreateSlider({
	Name = "Speed Amount",
	Range = {16, 1000},
	Increment = 1,
	Suffix = "SPEED",
	CurrentValue = 16,
	Flag = "SpeedSlider",
	Callback = function(Value)
		currentSpeed = Value
		if speedEnabled then
			applySpeed()
		end
	end,
})

